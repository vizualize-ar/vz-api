<?xml version="1.0" encoding="UTF-8"?>
<ServiceManifest
  
  Name="CosmosDBGatewayService"
  Version="#(REPLACE_ApplicationCodeConfigVersion)" 
  
  xsi:schemaLocation="http://schemas.microsoft.com/2011/01/fabric WinFabServiceModel.xsd"
  xmlns="http://schemas.microsoft.com/2011/01/fabric"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

  <Description>Service that implements a stateless CosmosDBGateway Service</Description>
  <ServiceTypes>
    <StatelessServiceType ServiceTypeName="CosmosDBGatewayService" />
  </ServiceTypes>
  <CodePackage Name="CosmosDBGatewayService.Code" Version="#(REPLACE_ApplicationCodeVersion)">
    <SetupEntryPoint>
      <ExeHost>
        <Program>Microsoft.Azure.CosmosDB.ServiceStartupEntryPoint.exe</Program>
		<Arguments>"CosmosDBGatewayService"</Arguments>
      </ExeHost>
    </SetupEntryPoint>
    <EntryPoint>
      <ExeHost>
        <Program>Microsoft.Azure.CosmosDB.GatewayService.exe</Program>
      </ExeHost>
    </EntryPoint>
  </CodePackage>
  <ConfigPackage Name="CosmosDBGatewayService.Config" Version="#(REPLACE_ApplicationConfigVersion)" />
</ServiceManifest>
